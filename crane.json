{
    "containers": [
        {
            "name": "sinatra_app",
            "dockerfile": ".",
            "image": "michaelsauter/sinatra-example",
            "run": {
                "publish": ["9292:9292"],
                "volume": ["app:/data"],
                "detach": true,
                "link": ["sinatra_db:db"],
                "env": ["POSTGRESQL_DB=sinatra", "POSTGRESQL_USER=sinatra", "POSTGRESQL_PASS=sinatra"]
            }
        },
        {
            "name": "sinatra_db",
            "image": "orchardup/postgresql",
            "run": {
                "publish": ["5432:5432"],
                "env": ["POSTGRESQL_DB=sinatra", "POSTGRESQL_USER=sinatra", "POSTGRESQL_PASS=sinatra"],
                "detach": true
            }
        }
    ]
}
